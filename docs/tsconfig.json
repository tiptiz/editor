{
    "extends": "../.configs/tsconfig.base.json",
    "compilerOptions": {
        "types": ["@remix-run/node", "vite/client"],
        "jsx": "react-jsx",
        "strict": true,
        "allowJs": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./app/*"]
        },
        "noEmit": true
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "**/.server/**/*.ts",
        "**/.server/**/*.tsx",
        "**/.client/**/*.ts",
        "**/.client/**/*.tsx"
    ]
}
